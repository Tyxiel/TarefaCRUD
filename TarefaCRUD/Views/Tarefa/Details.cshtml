@model TarefaCRUD.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalhes da Tarefa</h1>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-truncate">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>

                <dt class="col-sm-3 fw-bold text-truncate">
                    @Html.DisplayNameFor(model => model.DataInicio)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DataInicio)
                </dd>

                <dt class="col-sm-3 fw-bold text-truncate">
                    @Html.DisplayNameFor(model => model.Prazo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Prazo)
                </dd>

                <dt class="col-sm-3 fw-bold text-truncate">
                    @Html.DisplayName("Responsável")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdPessoaNavigation.NomePessoa)
                </dd>

                <dt class="col-sm-3 fw-bold text-truncate">
                    @Html.DisplayNameFor(model => model.Prioridade)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Prioridade)
                </dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.IdTarefa" class="btn btn-primary me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>
