@model TarefaCRUD.Models.Pessoa

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<div class="container">
    <h1 class="text-center">Excluir Pessoa</h1>
    <hr />
    <h3>Tem certeza que deseja excluir essa pessoa?</h3>

    @* EXIBE MENSAGEM DE ERRO SE EXISTIR *@
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Erro"]
        </div>
    }

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomePessoa)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomePessoa)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdPessoa" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </form>
        </div>
    </div>
</div>
