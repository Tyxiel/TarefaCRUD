@model TarefaCRUD.Models.Pessoa

@{
    ViewData["Title"] = "Detalhes da Pessoa";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalhes da Pessoa</h1>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <dl class="row">
                <dt class="col-sm-3 text-truncate fw-bold">
                    @Html.DisplayNameFor(model => model.NomePessoa)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NomePessoa)
                </dd>
                <dt class="col-sm-3 text-truncate fw-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.IdPessoa" class="btn btn-primary me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>
